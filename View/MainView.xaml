<Window x:Class="FilterBuilder.View.MainView"
        mc:Ignorable="d"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:enum="clr-namespace:FilterBuilder.Enum"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="Filter Builder" Width="800" Height="600" Background="DarkGray">
    <DockPanel LastChildFill="True">
        
        <ItemsControl DockPanel.Dock="Top" ItemsSource="{Binding NavigationViewModels.Values}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="16" Rows="1" Height="40"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.ChangeViewCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" CommandParameter="{Binding Key}">
                        <Image Source="{Binding Image}" />
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ContentControl Content="{Binding CurrentViewModel}" />
        
    </DockPanel>
</Window>