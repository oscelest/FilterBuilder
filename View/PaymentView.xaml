<UserControl x:Class="ParkingApp.View.PaymentView"
             mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enum="clr-namespace:ParkingApp.Enum"
             xmlns:parkingApp="clr-namespace:ParkingApp"
             DataContext="{Binding Locator.Payment, Source={x:Static parkingApp:State.Instance}}">
    <StackPanel>
        <Button Content="Back" Command="{Binding Locator.Window.ChangeViewCommand, Source={x:Static parkingApp:State.Instance}}" CommandParameter="{x:Static enum:View.HOME}" />
        <Button Content="Complete" Command="{Binding Locator.Window.ChangeViewCommand, Source={x:Static parkingApp:State.Instance}}" CommandParameter="{x:Static enum:View.HOME}" />
        <Label>This is where credit card information should be entered.</Label>
    </StackPanel>
</UserControl>
